<h1>Product</h1>

<h2><%= @product.name %></h2>
<h2><%= @product.description %></h2>
<h2>$<%= @product.price %></h2>
<h2><%= @product.supplier.name %></h2>
<h2><%= @product.supplier.email %></h2>
<% @product.images.each do |image| %>
  <img class="show-images" src="<%= image.url %>">
<% end %>
<br>

<% if current_user %>
  <%= form_tag "/orders", method: :post do %>
    <div>
      Quantity: <input type="text" name="quantity">
    </div>
    <div>
      <input type="hidden" name="product_id" value="<%= @product.id %>">
    </div>
    <div>
      <input type="submit" value="Buy Now!">
    </div>
  <% end %>
<% end %>

<button class="btn btn-success"><a href="/products/<%= @product.id %>/edit">Edit</a></button>
<%= link_to "Delete", "/products/#{@product.id}", method: :delete %>

